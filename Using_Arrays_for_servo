#include <Servo.h>
Servo servos[6];
int potPins[6] = {0, 1, 2, 3, 4, 5};
int servoPins[6] = {10, 9, 8, 7, 6, 5};
int delays[6] = {0, 1000, 1000, 1000, 1000, 1000};

void setup() {
  for (int i = 0; i < 6; i++) {
    servos[i].attach(servoPins[i]);
  }
}

void loop() {
  for (int i = 0; i < 6; i++) {
    int val = analogRead(potPins[i]);
    val = map(val, 0, 1023, 0, 180);
    servos[i].write(val);
    delay(delays[i]);
  }
}
